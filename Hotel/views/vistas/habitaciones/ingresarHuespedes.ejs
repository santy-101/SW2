<link rel="stylesheet" href="misEstilos/busquedaHabitacion.css">

<h1>Habitaciones Seleccionadas </h1>



<form action="/informacionReserva" method="GET">
    <br>
    <br>
    <% for(var i=0; i<habitaciones.length; i++) {%>
        <div class="row">

            <div class="col-sm-4">
                <% if (habitaciones[i].tipo=="simple") {%>
                    <img src="/fotos/habitacionSimple1.jpg" alt="Habitacion Simple Economica" class="imagenes">

                    <%}%>
                        <% if (habitaciones[i].tipo=="doble") {%>
                            <img src="/fotos/habitacionDoble.jpg" alt="Habitacion Simple Economica" class="imagenes">

                            <%}%>
                                <% if (habitaciones[i].tipo=="triple") {%>
                                    <img src="/fotos/habitacionTriple.jpg" alt="Habitacion Simple Economica" class="imagenes">

                                    <%}%>
            </div>
            <div class="col-sm-4">
                <br>
                <br>
                <br>
                <h3 style="color:black">Tipo de habitación: <%= habitaciones[i].tipo%></h3>
                <h3 style="color:black">Codigo de la Habitación: <%= habitaciones[i].codigo%></h3>
                <h3 style="color:black">Precio: <%= habitaciones[i].precio%></h3>
                <h3 style="color:black">Piso: <%= habitaciones[i].piso%></h3>

            </div>

            <div class="col-sm-4">
                <br>
                <br>
                <br>
                <div class="form-group">

                    <% if (habitaciones[i].tipo=="simple") {%>
                        <label>Número de huespedes : </label>
                        <input class="form-control" type="number" name="numHuespedes" value="1" min="1" max="2">

                        <%}%>
                            <% if (habitaciones[i].tipo=="doble") {%>
                                <label>Número de huespedes : </label>
                                <input class="form-control" type="number" name="numHuespedes" value="1" min="1" max="4">
                                <%}%>
                                    <% if (habitaciones[i].tipo=="triple") {%>
                                        <label>Número de huespedes : </label>
                                        <input class="form-control" type="number" name="numHuespedes" value="1" min="1" max="6">

                                        <%}%>
                </div>
            </div>
        </div>

        <% }%>
            
            <br>

            <h3>Datos del Responsable de la Reserva</h3>

            <div class="form-group">
                <label>Nombres (*)</label>
                <input type="text" class="form-control" placeholder="Ingrese sus Nombres " name="nombres" required>
            </div>

            <div class="form-group">
                <label>Apellidos(*)</label>
                <input type="text" class="form-control" placeholder="Ingrese sus Apellidos " name="apellidos" required>
            </div>

            <div class="form-group">
                <label>Correo(*)</label>
                <input type="email" class="form-control" name="correo" required>
            </div>
            <br>

            <center>

                <button type="submit" class="btn btn-success btn-lg">Continuar con la reserva </button>
            </center>

</form>


