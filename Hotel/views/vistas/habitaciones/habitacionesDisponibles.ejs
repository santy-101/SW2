<link rel="stylesheet" href="misEstilos/busquedaHabitacion.css">


<% if (habitaciones[0].tipo=="simple") {%>

    <h1>Habitaciones Simples Disponibles </h1>

    <%}%>
        <% if (habitaciones[0].tipo=="doble") {%>

            <h1>Habitaciones Dobles Disponibles </h1>

            <%}%>

                <% if (habitaciones[0].tipo=="triple") {%>

                    <h1>Habitaciones Triples Disponibles </h1>

                    <%}%>


                        <form action="/ingresarHuespedes" method="GET">
                            <br>
                            <br>
                            <% for(var i=0; i<habitaciones.length; i++) {%>
                                <div class="row">

                                    <div class="col-sm-4">
                                        <% if (habitaciones[i].tipo=="simple") {%>
                                            <img src="/fotos/habitacionSimple1.jpg" alt="Habitacion Simple Economica" class="imagenes">

                                            <%}%>
                                                <% if (habitaciones[i].tipo=="doble") {%>
                                                    <img src="/fotos/habitacionDoble.jpg" alt="Habitacion Simple Economica" class="imagenes">

                                                    <%}%>
                                                        <% if (habitaciones[i].tipo=="triple") {%>
                                                            <img src="/fotos/habitacionTriple.jpg" alt="Habitacion Simple Economica" class="imagenes">

                                                            <%}%>
                                    </div>
                                    <div class="col-sm-4">
                                        <br>
                                        <br>
                                        <br>
                                        <h3 style="color:black">Codigo de la Habitación: <%= habitaciones[i].codigo%></h3>
                                        <h3 style="color:black">Precio: <%= habitaciones[i].precio%></h3>
                                        <h3 style="color:black">Piso: <%= habitaciones[i].piso%></h3>
                                        <input type="hidden" name="numOpcion<%= i %>" value="AAAA" class="btn btn-danger btn-block">
                                    </div>

                                    <div class="col-sm-4">
                                        <br>
                                        <br>
                                        <br>
                                        <a href="" class="btn btn-danger btn-block"  id="<%= habitaciones[i].id%>" onclick="seleccion('<%= habitaciones[i].id%>')"  >Seleccionar esta opción</a>
                                    </div>

                                    <!--<button type="submit" class="btn btn-primary btn-block">Seleccionar esta opción </button>-->
                                </div>

                                <% }%>


                                    <br>

                                    <center>

                                        <button type="submit" class="btn btn-success btn-lg">Continuar con la reserva </button>
                                    </center>
                        </form>


                        <script>
                            function seleccion(id) {
                                
                            console.log(id);
                                document.getElementById(id).style.backgroundColor = "brown";
//                                document.getElementById("dos").style.backgroundColor = "#DBA901";
//                                document.getElementById("tres").style.backgroundColor = "#DBA901";
                            }

                            function seleccion2() {
                                document.getElementById("dos").style.backgroundColor = "brown";
                                document.getElementById("uno").style.backgroundColor = "#DBA901";
                                document.getElementById("tres").style.backgroundColor = "#DBA901";
                            }

                            function seleccion3() {
                                document.getElementById("tres").style.backgroundColor = "brown";
                                document.getElementById("uno").style.backgroundColor = "#DBA901";
                                document.getElementById("dos").style.backgroundColor = "#DBA901";
                            }
                        </script>